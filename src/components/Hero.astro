    label { font-size: 0.8rem; color: #94a3b8; font-weight: 700; text-transform: uppercase; }
    input, textarea { background: #070b14; border: 1px solid rgba(255,255,255,0.1); padding: 1rem; color: #fff; border-radius: 12px; width: 100%; box-sizing: border-box; }
    .primary-btn { background: #10b981; color: #000; padding: 1.2rem; border-radius: 12px; font-weight: 800; border: none; cursor: pointer; transition: 0.3s; }
