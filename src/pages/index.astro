<style>
	:global(html) {
		scroll-behavior: smooth;
	}

	:global(body) {
		background-color: #0B0D17;
		color: #F0F4F8;
		font-family: 'Inter', sans-serif;
		margin: 0;
		padding: 0;
	}

	header { padding: 2rem; max-width: 1100px; margin: 0 auto; width: 100%; box-sizing: border-box;}

	/* --- Hero Section --- */
	.hero {
		text-align: center;
		padding: 4rem 1rem 8rem 1rem;
		max-width: 1100px;
		margin: 0 auto;
	}

	.compliance-badge {
		display: inline-block;
		padding: 0.4rem 1.2rem;
		background: rgba(0, 168, 150, 0.1);
		border: 1px solid rgba(0, 168, 150, 0.4);
		color: #00A896;
		border-radius: 50px;
		font-size: 0.75rem;
		font-weight: 700;
		letter-spacing: 1.5px;
		margin-bottom: 2rem;
	}

	h1 {
		font-size: clamp(2.2rem, 5vw, 3.6rem);
		line-height: 1.2;
		font-weight: 800;
		margin-bottom: 1.5rem;
	}

	.text-gradient {
		background: linear-gradient(45deg, #00A896, #FDB813);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.gold-text { color: #FDB813; }

	.tagline {
		font-size: 1.1rem;
		text-transform: uppercase;
		letter-spacing: 2px;
		font-weight: 600;
		margin-bottom: 2rem;
		color: rgba(255, 255, 255, 0.7);
	}

	.subtitle {
		font-size: clamp(1.1rem, 2vw, 1.25rem);
		line-height: 1.7;
		max-width: 800px;
		margin: 0 auto 3rem auto;
		opacity: 0.9;
	}

	.cta-group {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
		flex-wrap: wrap;
		margin-bottom: 6rem;
	}

	.cta-button {
		background: #00A896;
		color: white;
		padding: 1.1rem 2.2rem;
		border-radius: 10px;
		font-weight: bold;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.cta-button:hover {
		background: #008f7d;
		transform: translateY(-3px);
		box-shadow: 0 10px 20px rgba(0, 168, 150, 0.3);
	}

	.secondary-button {
		color: white;
		padding: 1.1rem 2.2rem;
		border: 1px solid rgba(255, 255, 255, 0.2);
		border-radius: 10px;
		text-decoration: none;
		transition: 0.3s;
	}

	.secondary-button:hover { border-color: #FDB813; color: #FDB813; }

	/* --- Mockup Motion --- */
	.mockup-container {
		background: #1A1D2B;
		border-radius: 15px;
		border: 1px solid rgba(255, 255, 255, 0.1);
		overflow: hidden;
		max-width: 700px;
		margin: 0 auto;
		box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
		transition: transform 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
	}

	.mockup-container:hover {
		transform: translateY(-15px) rotateX(2deg) rotateY(-2deg);
	}

	.mockup-header {
		background: rgba(255, 255, 255, 0.05);
		padding: 0.75rem 1rem;
		display: flex; gap: 8px;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}

	.dot { width: 10px; height: 10px; border-radius: 50%; }
	.red { background: #FF5F56; } .yellow { background: #FFBD2E; } .green { background: #27C93F; }

	.mockup-content { padding: 1.5rem; background: #0B0D17; }
	.listing-preview {
		background: rgba(255, 255, 255, 0.03);
		border-radius: 12px;
		text-align: left;
		overflow: hidden;
		border: 1px solid rgba(0, 168, 150, 0.2);
	}

	.listing-image {
		height: 180px;
		background: linear-gradient(45deg, #1A1D2B, #00A896);
		transition: background 0.5s ease;
	}

	.mockup-container:hover .listing-image {
		background: linear-gradient(45deg, #00A896, #FDB813);
	}

	.listing-details { padding: 1.2rem; }
	.price { font-size: 1.4rem; font-weight: 800; color: #FDB813; }
	.address { opacity: 0.7; margin: 0.4rem 0; font-size: 0.9rem; }
	.stats { font-size: 0.85rem; color: #00A896; font-weight: bold; }

	/* --- Features Section --- */
	.features-section {
		padding: 8rem 1rem;
		max-width: 1200px;
		margin: 0 auto;
		border-top: 1px solid rgba(255, 255, 255, 0.05);
	}

	.section-header { text-align: center; margin-bottom: 4rem; }
	.section-header h2 { font-size: 2.8rem; margin-bottom: 1rem; }
	.section-header p { opacity: 0.7; font-size: 1.1rem; }

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2.5rem;
	}

