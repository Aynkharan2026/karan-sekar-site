---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import GlobalEdge from "../components/GlobalEdge.astro";
import Intelligence from "../components/Intelligence.astro";

// Normalize BASE to ALWAYS end with a trailing slash
const BASE = (import.meta.env.BASE_URL || "/").replace(/\/?$/, "/");
const p = (path) => `${BASE}${String(path).replace(/^\//, "")}`;
---

<Layout title="Karan Sekar | High-Performance Global Platforms">
  <header class="site-header">
    <a href={BASE} class="brand">
      <img src={p("my-logo.jpg")} alt="Karan Sekar Logo" class="logo" />
    </a>

    <nav class="nav">
      <a href={p("#advantage")}>Advantage</a>
      <a href={p("#intelligence")}>Intelligence</a>
      <a href={p("contact")}>Contact</a>
      <a href={p("rentycars")}>RentyCars</a>
    </nav>
  </header>

  <main>
    <Hero />
    <GlobalEdge />
    <Intelligence />
  </main>

  <footer class="site-footer">
    <p>&copy; 2026 Karan Sekar Agency. All Rights Reserved.</p>
  </footer>
</Layout>

<style>
  .site-header {
    padding: 1.5rem 5%;
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }
  .brand { display: inline-flex; align-items: center; text-decoration: none; }
  .logo { width: 110px; height: auto; display: block; }

  .nav { display: flex; gap: 1.25rem; flex-wrap: wrap; justify-content: flex-end; }
  .nav a { color: #94a3b8; text-decoration: none; font-weight: 700; font-size: 0.95rem; transition: 0.2s; }
  .nav a:hover { color: #fbbf24; }

  .site-footer {
    text-align: center;
    padding: 6rem 1.5rem;
    opacity: 0.5;
    font-size: 0.9rem;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    max-width: 1200px;
    margin: 0 auto;
  }
</style>
