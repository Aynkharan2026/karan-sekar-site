<style>
	:global(html) { scroll-behavior: smooth; }
	:global(body) {
		background: #070b14;
		color: #f8fafc;
		font-family: 'Inter', sans-serif;
		margin: 0;
	}
	header { padding: 1.5rem 5%; max-width: 1200px; margin: 0 auto; width: 100%; box-sizing: border-box;}

	/* Shared Components */
	.text-gradient { background: linear-gradient(to right, #34d399, #a3e635); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent; color: #34d399; }
	.primary-btn { background: #10b981; color: #000; padding: 1.2rem 2.5rem; border-radius: 12px; font-weight: 800; text-decoration: none; display: inline-block; transition: 0.3s; }
	.primary-btn:hover { background: #34d399; transform: translateY(-3px); }

	/* Hero Styles */
	.hero { text-align: center; padding: 8rem 1.5rem 4rem; max-width: 1100px; margin: 0 auto; }
	.agency-badge { background: rgba(52, 211, 153, 0.1); border: 1px solid #10b981; color: #34d399; padding: 0.5rem 1.2rem; border-radius: 99px; font-size: 0.8rem; font-weight: 700; }
	.hero h1 { font-size: clamp(2rem, 5vw, 3.8rem); line-height: 1.2; margin: 2rem 0; }
	.tagline { color: #94a3b8; text-transform: uppercase; letter-spacing: 3px; font-size: 0.9rem; }
	.description { font-size: 1.2rem; color: #cbd5e1; max-width: 750px; margin: 0 auto 3rem; line-height: 1.8; }
	.cta-group { display: flex; gap: 1.5rem; justify-content: center; flex-wrap: wrap; }
	.secondary-btn { border: 1px solid rgba(255, 255, 255, 0.3); color: #fff; padding: 1.2rem 2.5rem; border-radius: 12px; text-decoration: none; font-weight: 600; transition: 0.3s; }

	/* Multilingual Mastery Section */
	.global-advantage { padding: 8rem 1.5rem; text-align: center; max-width: 1200px; margin: 0 auto; background: rgba(16, 185, 129, 0.02); border-radius: 40px; }
	.advantage-header h2 { font-size: 3rem; margin-bottom: 1rem; }
	.language-showcase { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 2rem; margin: 4rem 0; }
	.lang-card { padding: 3rem 2rem; background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.1); border-radius: 24px; text-align: left; }
	.lang-card.highlight { border-color: #fbbf24; background: rgba(251, 191, 36, 0.03); }
	.lang-label { color: #fbbf24; font-weight: 800; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 2px; }
	.lang-card h3 { margin: 1rem 0; font-size: 1.5rem; }
	.edge-note { max-width: 800px; margin: 3rem auto 0; font-size: 1.1rem; opacity: 0.8; line-height: 1.6; }

	/* Intel & Roadmap */
	.intelligence, .roadmap, .final-cta { padding: 8rem 1.5rem; text-align: center; max-width: 1100px; margin: 0 auto; }
	.intel-grid, .steps-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2.5rem; margin-top: 4rem; }
	.intel-card, .step { padding: 3rem 2rem; background: rgba(255,255,255,0.02); border: 1px solid rgba(255,255,255,0.08); border-radius: 20px; text-align: left; }
	.icon { font-size: 2.5rem; margin-bottom: 1.5rem; }
	.step-num { font-size: 3rem; font-weight: 800; opacity: 0.1; display: block; margin-bottom: 1rem; }

	.cta-box { background: linear-gradient(rgba(16, 185, 129, 0.1), transparent); border: 1px solid rgba(16, 185, 129, 0.2); padding: 5rem 2rem; border-radius: 30px; }

	footer { padding: 4rem; text-align: center; opacity: 0.3; border-top: 1px solid rgba(255,255,255,0.05); }
</style>