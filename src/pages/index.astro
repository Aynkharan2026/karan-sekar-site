---
import { Image } from 'astro:assets';
import myLogo from '../assets/myLogo.jpg'; 
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Karan Sekar | Real Estate Web Platforms</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
	</head>
	<body>
		<header>
			<Image src={myLogo} alt="Karan Sekar Logo" width={50} />
		</header>

		<main>
			<section class="hero">
				<div class="badge-container">
					<span class="compliance-badge">TRREB & CREA COMPLIANT</span>
				</div>

				<h1>
					Fast, Compliant Real Estate Websites That<br />
					<span class="text-gradient">Generate Leads</span> — We Handle Everything
				</h1>

				<p class="tagline">Purpose-Built for Canadian Realtors</p>

				<p class="description">
					TRREB & CREA-approved IDX, SEO-ready architecture, and automated lead capture — 
					so you can focus on selling homes, not managing websites.
				</p>

				<div class="cta-group">
					<a href="/contact" class="primary-btn">Get Your Demo Site Today</a>
					<a href="#features" class="secondary-btn">See Features →</a>
				</div>

				<div class="platform-mockup">
					<div class="mockup-bar">
						<span class="dot red"></span><span class="dot yellow"></span><span class="dot green"></span>
					</div>
					<div class="mockup-body">
						<div class="listing-card">
							<div class="listing-img"></div>
							<div class="listing-info">
								<p class="price">$1,250,000</p>
								<p class="address">123 Bay Street, Toronto, ON</p>
								<p class="meta">4 Bed · 3 Bath · TRREB Integrated</p>
							</div>
						</div>
					</div>
				</div>
			</section>

			<section id="features" class="features">
				<div class="features-grid">
					<div class="f-card">
						<h3>TRREB IDX Sync</h3>
						<p>Real-time MLS® feeds that keep your listings updated automatically and legally.</p>
					</div>
					<div class="f-card">
						<h3>Multilingual Reach</h3>
						<p>Platforms built for English, Tamil, and Spanish speakers to dominate the local market.</p>
					</div>
					<div class="f-card">
						<h3>AI Automation</h3>
						<p>Integrated workflows that qualify leads and sync assets while you sleep.</p>
					</div>
				</div>
			</section>
		</main>

		<footer>
			<p>&copy; 2026 Karan Sekar Agency. All Rights Reserved.</p>
		</footer>
	</body>
</html>

<style>
	:global(html) { scroll-behavior: smooth; }
	:global(body) {
		background: radial-gradient(circle at top, #0a1020 0%, #070b14 100%);
		color: #e2e8f0;
		font-family: 'Inter', sans-serif;
		margin: 0;
	}

	header { padding: 1.5rem 5%; max-width: 1200px; margin: 0 auto; }

	.hero {
		text-align: center;
		padding: 5rem 1rem;
		max-width: 1000px;
		margin: 0 auto;
	}

	.compliance-badge {
		background: rgba(16, 185, 129, 0.1);
		border: 1px solid rgba(16, 185, 129, 0.3);
		color: #34d399;
		padding: 0.4rem 1rem;
		border-radius: 99px;
		font-size: 0.75rem;
		font-weight: 700;
		letter-spacing: 1px;
	}

	h1 {
		font-size: clamp(2.5rem, 6vw, 4rem);
		line-height: 1.1;
		font-weight: 800;
		margin: 2rem 0 1rem;
	}

	.text-gradient {
		background: linear-gradient(to r, #34d399, #a3e635);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.tagline {
		color: #fbbf24;
		text-transform: uppercase;
		font-weight: 700;
		letter-spacing: 2px;
		font-size: 0.9rem;
	}

	.description {
		font-size: 1.2rem;
		color: #94a3b8;
		max-width: 700px;
		margin: 1.5rem auto 3rem;
		line-height: 1.6;
	}

	.cta-group { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; }

	.primary-btn {
		background: #10b981;
		color: #000;
		padding: 1rem 2rem;
		border-radius: 8px;
		font-weight: 700;
		text-decoration: none;
		transition: 0.3s;
	}

	.primary-btn:hover { background: #34d399; transform: translateY(-2px); }

	.secondary-btn {
		border: 1px solid rgba(255, 255, 255, 0.2);
		color: #fff;
		padding: 1rem 2rem;
		border-radius: 8px;
		text-decoration: none;
		transition: 0.3s;
	}

	.secondary-btn:hover { border-color: #fff; }

	/* --- Mockup Style --- */
	.platform-mockup {
		margin-top: 5rem;
		background: rgba(255, 255, 255, 0.03);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		overflow: hidden;
		box-shadow: 0 25px 50px -12px rgba(0,0,0,0.5);
	}

	.mockup-bar { background: rgba(255,255,255,0.05); padding: 0.8rem; display: flex; gap: 8px; }
	.dot { width: 10px; height: 10px; border-radius: 50%; }
	.red { background: #ef4444; } .yellow { background: #fbbf24; } .green { background: #22c55e; }

	.mockup-body { padding: 2rem; text-align: left; }
	.listing-card { max-width: 400px; background: rgba(0,0,0,0.3); border-radius: 8px; overflow: hidden; border: 1px solid rgba(16, 185, 129, 0.2); }
	.listing-img { height: 150px; background: linear-gradient(45deg, #0f172a, #10b981); }
	.listing-info { padding: 1.5rem; }
	.price { font-size: 1.8rem; font-weight: 800; color: #fbbf24; margin: 0; }
	.address { color: #94a3b8; margin: 0.5rem 0; }
	.meta { color: #34d399; font-weight: 700; font-size: 0.8rem; }

	/* --- Features --- */
	.features { padding: 5rem 1rem; max-width: 1100px; margin: 0 auto; }
	.features-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; }
	.f-card { padding: 2.5rem; background: rgba(255,255,255,0.02); border: 1px solid rgba(255,255,255,0.05); border-radius: 16px; }
	.f-card h3 { color: #34d399; margin-top: 0; }

	footer { text-align: center; padding: 4rem; opacity: 0.4; font-size: 0.8rem; }
</style>