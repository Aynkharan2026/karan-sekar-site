---
import Layout from "../layouts/Layout.astro";
const BASE = import.meta.env.BASE_URL;
---

<Layout title="Contact | Karan Sekar Platform Agency">
  <main>
    <section class="contact-hero">
      <h1 class="text-gradient">Begin Your Architecture Session</h1>
      <p>Ready to automate your global reach? Let's build your infrastructure.</p>
    </section>

    <section class="contact-container">
      <form
        class="contact-form"
        action="https://formspree.io/f/xnjbnpdk"
        method="POST"
      >
        <input type="hidden" name="_next" value={`${BASE}success`} />

        <div class="form-group">
          <label for="name">Full Name</label>
          <input type="text" id="name" name="name" placeholder="Full Name" required />
        </div>

        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" placeholder="you@example.com" required />
        </div>

        <div class="form-group">
          <label for="market">Primary Market Language</label>
          <select id="market" name="market">
            <option value="english">English</option>
            <option value="tamil">Tamil (தமிழ்)</option>
            <option value="mandarin">Mandarin (普通话)</option>
            <option value="spanish">Spanish (Español)</option>
          </select>
        </div>

        <div class="form-group">
          <label for="message">Project Vision</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            placeholder="Tell me about the platform you want to build..."
          ></textarea>
        </div>

        <button type="submit" class="primary-btn">Send Message</button>
      </form>
    </section>
  </main>

  <footer class="footer">
    <a href={`${BASE}`} class="back-link">← Back to Home</a>
  </footer>
</Layout>

<style>
  .contact-hero {
    text-align: center;
    padding: 6rem 1.5rem 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0 0 1rem 0;
  }

  .text-gradient {
    background: linear-gradient(to right, #34d399, #a3e635);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: #34d399;
  }

  .contact-hero p {
    margin: 0;
    color: #94a3b8;
    line-height: 1.7;
  }

  .contact-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 3rem 1.5rem 5rem;
  }

  .contact-form {
    background: rgba(255, 255, 255, 0.02);
    padding: 3rem;
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .form-group {
    margin-bottom: 1.75rem;
  }

  label {
    display: block;
    margin-bottom: 0.6rem;
    font-weight: 700;
    color: #94a3b8;
    font-size: 0.9rem;
  }

  input,
  select,
  textarea {
    width: 100%;
    padding: 1rem;
    background: #0d1224;
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 12px;
    color: white;
    font-family: inherit;
    box-sizing: border-box;
  }

  input:focus,
  textarea:focus,
  select:focus {
    border-color: rgba(52, 211, 153, 0.9);
    outline: none;
  }

  .primary-btn {
    width: 100%;
    background: #10b981;
    color: #000;
    padding: 1.2rem;
    border-radius: 12px;
    font-weight: 800;
    border: none;
    cursor: pointer;
    transition: 0.25s;
  }

  .primary-btn:hover {
    background: #34d399;
    transform: translateY(-2px);
  }

  .footer {
    text-align: center;
    padding: 3rem 1.5rem 5rem;
  }

  .back-link {
    color: #94a3b8;
    text-decoration: none;
    font-weight: 700;
  }

  .back-link:hover {
    color: #fff;
  }
</style>
