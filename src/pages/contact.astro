---
import Hero from '../components/Hero.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Contact | Karan Sekar Platform Agency</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
	</head>
	<body>
		<main>
			<section class="contact-hero">
				<h1 class="text-gradient">Begin Your Architecture Session</h1>
				<p>Ready to automate your global reach? Let's build your infrastructure.</p>
			</section>

			<section class="contact-container">
				<form class="contact-form">
					<div class="form-group">
						<label for="name">Full Name</label>
						<input type="text" id="name" name="name" placeholder="Karan Sekar" required />
					</div>
					
					<div class="form-group">
						<label for="email">Email Address</label>
						<input type="email" id="email" name="email" placeholder="you@example.com" required />
					</div>

					<div class="form-group">
						<label for="market">Primary Market Language</label>
						<select id="market" name="market">
							<option value="english">English</option>
							<option value="tamil">Tamil (தமிழ்)</option>
							<option value="mandarin">Mandarin (普通话)</option>
							<option value="spanish">Spanish (Español)</option>
						</select>
					</div>

					<div class="form-group">
						<label for="message">Project Vision</label>
						<textarea id="message" name="message" rows="5" placeholder="Tell me about the platform you want to build..."></textarea>
					</div>

					<button type="submit" class="primary-btn">Send Message</button>
				</form>
			</section>
		</main>

		<footer>
			<a href="/" class="back-link">← Back to Home</a>
		</footer>
	</body>
</html>

<style>
	:global(body) {
		background: #070b14;
		color: #f8fafc;
		font-family: 'Inter', sans-serif;
		margin: 0;
	}

	.contact-hero { text-align: center; padding: 6rem 1.5rem 2rem; }
	h1 { font-size: 3rem; font-weight: 800; margin-bottom: 1rem; }
	
	.text-gradient { 
		background: linear-gradient(to right, #34d399, #a3e635); 
		-webkit-background-clip: text; 
		background-clip: text; 
		-webkit-text-fill-color: transparent; 
		color: #34d399; 
	}

	.contact-container { max-width: 600px; margin: 0 auto; padding: 4rem 1.5rem; }
	
	.contact-form {
		background: rgba(255, 255, 255, 0.02);
		padding: 3rem;
		border-radius: 24px;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.form-group { margin-bottom: 2rem; }
	
	label { display: block; margin-bottom: 0.5rem; font-weight: 600; color: #94a3b8; font-size: 0.9rem; }
	
	input, select, textarea {
		width: 100%;
		padding: 1rem;
		background: #0d1224;
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		color: white;
		font-family: inherit;
		box-sizing: border-box;
	}

	input:focus, textarea:focus { border-color: #34d399; outline: none; }

	.primary-btn { 
		width: 100%;
		background: #10b981; 
		color: #000; 
		padding: 1.2rem; 
		border-radius: 12px; 
		font-weight: 800; 
		border: none;
		cursor: pointer;
		transition: 0.3s;
	}

	.primary-btn:hover { background: #34d399; transform: translateY(-2px); }

	footer { text-align: center; padding: 4rem; }
	.back-link { color: #94a3b8; text-decoration: none; font-weight: 600; }
	.back-link:hover { color: #fff; }
</style>