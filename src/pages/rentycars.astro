---
import Layout from "../layouts/Layout.astro";
const BASE = import.meta.env.BASE_URL;
---

<Layout title="RentyCars | Coming Soon">
  <main class="wrap">
    <div class="card">
      <img
        src={`${BASE}rentycars-logo.png`}
        alt="RentyCars Logo"
        class="logo"
      />
      <h1>RentyCars.ca is Coming Soon</h1>
      <p>Insurance replacement fleet branding in progress.</p>
      <a class="link" href={`${BASE}`}>‚Üê Back to Home</a>
    </div>
  </main>
</Layout>

<style>
  .wrap {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    text-align: center;
  }

  .card {
    background: #0d1224;
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 28px;
    padding: 3.5rem 3rem;
    max-width: 720px;
    width: 100%;
  }

  .logo {
    height: 80px;
    width: auto;
    display: block;
    margin: 0 auto 2rem;
  }

  h1 {
    margin: 0 0 1rem 0;
    font-size: 2.2rem;
    font-weight: 900;
    color: #fff;
  }

  p {
    margin: 0 0 2rem 0;
    color: #94a3b8;
    font-weight: 600;
  }

  .link {
    color: #fbbf24;
    text-decoration: none;
    font-weight: 900;
  }

  .link:hover {
    color: #fff;
  }
</style>
